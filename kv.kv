MDScreenManager:
    MDScreen:
        name: "screen A"         #caractiristique
        #md_bg_color: "lightblue" #
        MDBoxLayout:
            #md_bg_color: "white"
            md_bg_color: app.theme_cls.bg_light

            MDHeroFrom:  
                id: hero_from
                tag: "hero"
                size_hint: None, None
                size: "120dp", "120dp"
                pos_hint: {"top": .98}
                x: 24
                FitImage:
                    source: "4.jpg"
                    size_hint: None, None
                    size: hero_from.size

        MDBoxLayout:
            md_bg_color: app.theme_cls.bg_light
            orientation: "vertical"
            pos_hint: {"top": .70} 
            MDTextField:
                id: gmail
                text: "abdollahblhaj@gmail.com"
                icon_left: "gmail"
                pos_hint: {"center_y": .5,"center_x":.5}  
                
            MDBoxLayout:
                orientation:"horizontal"
                halign:"center"
                size_hint_y: 1
                pos_hint: {"center_y": .5,"center_x":.5}  
                
                MDTextField:
                    id: text_field
                    text: "root.text"
                    password: True
                    icon_left: "key-variant"
                    max_text_length: 15
                    pos_hint: {"center_y": .9,"center_x":.9}

                MDIconButton:
                    icon: "eye-off"
                    pos_hint: {"center_y": .9,"center_x":.9}
                    pos: text_field.width - self.width + dp(8), 0
                    theme_text_color: "Hint"
                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        text_field.password = False if text_field.password is True else True
        MDRaisedButton:
            text: "Login"
            pos_hint: {"center_x": .5}
            y: "36dp"
            on_release:
                root.current_hero = "hero"
                root.current = "screen B"
    MDScreen:
        name: "screen B"
        hero_to: hero_to
        md_bg_color: app.theme_cls.bg_light
        MDHeroTo:
            id: hero_to
            size_hint: None, None
            size: "220dp", "220dp"
            pos_hint: {"center_x": .5, "center_y": .8}
        MDLabel:
            halign:"center"
            pos_hint: {"center_x": .5, "center_y": .4}
            font_size: "61sp"
            text:"Abdollah"
        MDRaisedButton:
            text: "Go To Screen C"
            pos_hint: {"center_x": .6, "center_y": .1}
            y: "52dp"
            on_release:
                root.current_hero = ""
                root.current = "screen C"
        MDRaisedButton:
            text: "Move Hero To Screen A"
            pos_hint: {"center_x": .4, "center_y": .1}
            y: "8dp"
            on_release:
                root.current_hero = "hero"
                root.current = "screen A"
        
    MDScreen:
        name: "screen C"
        md_bg_color: app.theme_cls.bg_light
        MDLabel:
            text: "Login Operation Succsesfoly"
            halign: "center"
            font_size: "61sp"
        MDRaisedButton:
            text: "Back"
            pos_hint: {"center_x": .5}
            y: "36dp"
            on_release:
                root.current = "screen B"
