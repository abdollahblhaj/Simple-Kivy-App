MDScreenManager:
    MDScreen:
        name:"screen 0"
            
        MDTextField:
            hint_text: "Email of your School"
            helper_text: "This will disappear when you click off"
            mode: "round"
            icon_right:"gmail"
            icon_right_color_focus: 0, 0, 1, 1
            icon_right_color_normal: 1, 1, 1, 1
            max_text_length: 15
            pos_hint: {"center_x": .5,"center_y": .69}
            size_hint: .93, .1
            height: "90dp"
        MDTextField:
            hint_text: "creat new password"
            helper_text: "This will disappear when you click off"
            mode: "round"
            icon_right:"account-key"
            icon_right_color_focus: 0, 0, 1, 1
            icon_right_color_normal: 1, 1, 1, 1
            max_text_length: 15
            pos_hint: {"center_x": .5,"center_y": .56}
            size_hint: .93, .1
            height: "90dp"
        MDTextField:
            hint_text: "Name of your School"
            helper_text: "This will disappear when you click off"
            mode: "round"
            icon_right:"school"
            icon_right_color_focus: 0, 0, 1, 1
            icon_right_color_normal: 1, 1, 1, 1
            max_text_length: 15
            pos_hint: {"center_x": .5,"center_y": .43}
            size_hint: .93, .1
            height: "90dp"
        MDTextField:
            hint_text: "Name of Boss"
            helper_text: "This will disappear when you click off"
            mode: "round"
            icon_right:"account-tie-woman"
            icon_right_color_focus: 0, 0, 1, 1
            icon_right_color_normal: 1, 1, 1, 1
            max_text_length: 15
            pos_hint: {"center_x": .5,"center_y": .3}
            size_hint: .93, .1
            height: "90dp"
        MDRaisedButton:
            text: "Login"
            pos_hint: {"center_x": .5}
            y: "36dp"
            on_release:
               # root.current_hero = "hero"
                root.current = "screen A"
   

    MDScreen:
        name: "screen A"         #caractiristique
        #md_bg_color: "lightblue" ## root.current_hero = "hero"
        MDBoxLayout:
            #md_bg_color: "white"
            md_bg_color: app.theme_cls.bg_light

            MDHeroFrom:  
                id: hero_from
                tag: "hero"
                size_hint: None, None
                size: "120dp", "120dp"
                pos_hint: {"top": .98}
                x: 24
                FitImage:
                    source: "4.jpg"
                    size_hint: None, None
                    size: hero_from.size

        MDBoxLayout:
            md_bg_color: app.theme_cls.bg_light
            orientation: "vertical"
            pos_hint: {"top": .70} 
            MDTextField:
                id: email
                text: "abdollah"
                icon_left: "gmail"
                pos_hint: {"center_y": .5,"center_x":.5}  
                
            MDBoxLayout:
                orientation:"horizontal"
                halign:"center"
                size_hint_y: 1
                pos_hint: {"center_y": .5,"center_x":.5}  
                
                MDTextField:
                    id: password
                    text: "123"
                    password: True
                    icon_left: "key-variant"
                    max_text_length: 15
                    pos_hint: {"center_y": .9,"center_x":.9}
                MDIconButton:
                    icon: "eye-off"
                    pos_hint: {"center_y": .9,"center_x":.9}
                    pos: password.width - self.width + dp(8), 0
                    theme_text_color: "Hint"
                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        password.password = False if password.password is True else True
        MDLabel:
            pos_hint: {"center_y": .3}
            id:error
            text:""
            theme_text_color:"Error"
            font_size: "21sp"
        MDRaisedButton:
            text: "Login"
            pos_hint: {"center_x": .5}
            y: "36dp"
            on_release:
               
                response=app.login(email.text,password.text)
                root.current = "screen B" if response == "yes" else "screen A"
                error.text="email or password not correct!" if response == "no" else ""
        MDRaisedButton:
            text: "SignUp"
            pos_hint: {"center_x": .3}
            y: "36dp"
            on_release:
                root.current = "screen 0"
                
    
    MDScreen:
        name: "screen B"
       # hero_to: hero_to
        md_bg_color: app.theme_cls.bg_light
        
        MDLabel:
            halign:"center"
            pos_hint: {"center_x": .6, "center_y": .5}
            font_size: "61sp"
            text:"Abdollah"
        MDRaisedButton:
            text: "Go To Screen C"
            pos_hint: {"center_x": .6, "center_y": .1}
            y: "52dp"
            on_release:
                root.current = "screen C"
        MDRaisedButton:
            text: "Move Hero To Screen A"
            pos_hint: {"center_x": .4, "center_y": .1}
            y: "8dp"
            on_release:
                root.current = "screen A"
        


    MDScreen:
        name: "screen C"
        md_bg_color: app.theme_cls.bg_light
        MDLabel:
            text: "Login Operation Succsesfoly"
            halign: "center"
            font_size: "61sp"
        MDRaisedButton:
            text: "Back"
            pos_hint: {"center_x": .5}
            y: "36dp"
            on_release:
               # root.current_hero = "hero"
                root.current = "screen B"
    
    